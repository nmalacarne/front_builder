<li class="accordion-navigation">
  <a href="#panel-<%= f.object.id %>">
    <%= f.object.title || 'New Danger' %>
  </a>
  <div id="panel-<%= f.object.id %>" class="content">
    <fieldset>
      <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :impulse %>
        <%= f.text_field :impulse %>
      </div>
      <div class="field">
        <%= f.label :impending_doom %>
        <%= f.text_field :impending_doom %>
      </div>
      <div class="field">
        <%= f.hidden_field :_destroy %>
      </div>
      <%= button_tag 'Delete', type: 'button', class: 'button alert tiny right delete-danger' %>
    </fieldset>
  </div>
</li>
