<div class="row">
  <div class="large-4 columns">
    <%= link_to 'New Adventure', new_adventure_path %>
  </div>
</div>

<div class="row">
  <% @adventures.each do |adventure| %>
    <%= link_to adventure_path(adventure) do %>
      <div class="large-4 columns">
        <div class="panel">
          <h3 class="text-center">
            <%= adventure.title %>     
          </h3>
          <hr>
          <p>
            <%= truncate adventure.description %>
          </p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

