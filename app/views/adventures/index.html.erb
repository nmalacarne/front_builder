<div class="row">
  <div class="large-4 columns">
    <%= link_to new_adventure_path do %>
      <%= button_tag type: 'button', class: 'button tiny success' do %>
        <%= content_tag :span, 'New Adventure' %>
      <% end %>
    <% end %>
  </div>
</div>

<div class="row" style="padding-top: 20px;">
  <% @adventures.each do |adventure| %>
    <%= link_to adventure_path(adventure) do %>
      <div class="large-4 columns">
        <div class="panel">
          <h3 class="text-center">
            <%= adventure.title %>     
          </h3>
          <hr>
          <p>
            <%= truncate adventure.description %>
          </p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

